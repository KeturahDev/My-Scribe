@{
  Layout = "_Layout";
}

@using MyScribe.Models;
@model List<MyScribe.Models.Board>;

<h1>Boards</h1>

@if (@Model.Count == 0)
{
  <h3>No boards have been added yet!</h3>
} 

@foreach (Board boards in Model)
{
  <li>@Html.ActionLink($"{boards.Name}", "Details", new { id = boards.BoardId })</li>
}

<p>@Html.ActionLink("Add a new board", "Create", null, null, new {@class = "btn btn-info"})</p>

<p>@Html.ActionLink("Home", "Index", "Home", null, new {@class = "btn btn-info"})</p>