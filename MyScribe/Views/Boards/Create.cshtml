@model MyScribe.Models.Board
<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="text-center">Create a new ScriBoard</h1>
    @using (Html.BeginForm())
    {
      <div class="form-group">
        <p>Topic</p>
        @Html.TextBoxFor(model => model.Name, new {@class="form-control"})
      </div>
      <div class="form-group">
        <p>Description</p>
        @Html.TextBoxFor(model => model.Description, new {@class="form-control"})
      </div>
      <div class="form-group">
        <p>Banner Image (image address)</p>
        @Html.TextBoxFor(model => model.BannerImage, new {@class="form-control"})
      </div>
      <div class="form-group">
        <label for="color">ScriBoard Color</label>
        <input id="color" name="Color" type="color">
      </div>
      <button type="submit" class="btn btn-info btn-block"> Add Board </button>
    }
  </div>
</div>