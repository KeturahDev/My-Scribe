@model MyScribe.Models.Board
<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="text-center">Create a new ScriBoard</h1>
    @using (Html.BeginForm())
    {
      <div class="form-group">
        <p>What's the topic</p>
        @Html.TextBoxFor(model => model.Name, new {@class="form-control"})
      </div>
      <div class="form-group">
        <p>DeSCRIBE the SCRIBoard! (bdm tsss~)</p>
        @Html.TextBoxFor(model => model.Description, new {@class="form-control"})
      </div>
      <div class="form-group">
        <p>ScriBoard Banner Image (user image address)</p>
        @Html.TextBoxFor(model => model.BannerImage, new {@class="form-control"})
      </div>
      <button type="submit" class="btn btn-info btn-block"> Add a Board </button>
    }
  </div>
</div>