@{
  Layout = "_Layout";
}

@model MyScribe.Models.Board

<h2>Edit</h2>

<h4>Edit this Board: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.BoardId)

    <div class="form-group">
      @Html.LabelFor(model => model.Name)
      @Html.EditorFor(model => model.Name)
    </div>

    <div class="form-group">
      @Html.LabelFor(model => model.Description)
      @Html.EditorFor(model => model.Description)
    </div>

    <div class="form-group">
      @Html.LabelFor(model => model.BannerImage)
      @Html.EditorFor(model => model.BannerImage)
    </div>

    <div class="form-group">
      <label for="color">ScriBoard Color</label>
      <input id="color" name="Color" type="color">
    </div>

    <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to boards", "Index")</p>